---
import { Image } from "astro:assets";
import astronautImage from "~/assets/astronaut.png";
import HeroImage from "~/components/hero-image.astro";
import Starfield from "~/components/starfield.astro";
import GitHubCorner from "./github-corner.astro";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-black">
  <Starfield />
  <GitHubCorner />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>
  <div
    class="relative grid h-full place-items-center sm:grid-cols-1 sm:grid-rows-3"
  >
    <h1 class="flex flex-col items-center gap-2 sm:gap-4">
      <div
        class="gradient-text text-center font-extrabold tracking-tighter text-4xl md:text-4xl"
      >
        A seasoned IT consultant,
        <br /> software developer, and
        <br /> system architect.
      </div>
    </h1>
    <div id="astronaut">
      <Image
        class="h-half w-half object-cover"
        src={astronautImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="A floating astronaut in a space suit"
      />
    </div>
    <h4 class="flex flex-col items-center gap-2 sm:gap-4">
      <div
        class="gradient-text text-1xl md:text-1xl text-center font-extrabold tracking-tighter"
      >
        Please note that this site is currently under heavy development.
        <br /> I'm working diligently to bring you an informative and engaging experience.
        <br /> Keep visiting for updates, new content, and exciting features that
        are on the way.
        <br /> Stay tuned, and I look forward to sharing more with you soon!
      </div>
    </h4>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translate3d(30px, 0, 15px);
    }

    25% {
      transform: translate3d(-30px, 20px, 20px);
    }

    50% {
      transform: translate3d(0, -30px, 10px);
    }

    75% {
      transform: translate3d(20px, 10px, 25px);
    }
  }

  #astronaut {
    animation: float linear 5s infinite;
  }

  @media (prefers-reduced-motion: reduce) {
    #astronaut {
      @apply animate-none;
    }

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
